@model Ai_Panel.Application.DTOs.UpdateUserExcelViewModel
<div class="row justify-content-md-center">
    <div class="col-md-8 col-lg-8 col-12">
        <div class="card shadow">
            <h5 class="card-header">افزودن اکسل اتصال کاربر به مشاور</h5>
            <div class="card-body">
                <section class="card-text">
                    <form asp-page-handler="InputExcel" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-12 mb-2">
                                <div class="">
                                    <a class="btn btn-outline-success" href="~/excel/example/ImportAddAdvisorToUsersWithExcelExample.xlsx" target="_blank">دانلود نمونه فایل فرمت ورودی اکسل</a>
                                </div>
                                <div class="mt-3">
                                    <label class="">فایل اکسل :</label>
                                    <input type="file" class="form-control" asp-for="@Model.Excel" name="Excel" accept=".xlsx" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-1 text-end" id="submitExcel">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                                <div class="col-11 mt-2" id="ExcelStatus"></div>
                                <a target="_blank" class="btn btn-outline-danger mt-2 d-none" id="ReportImportExcel">دانلود اکسل گزارش </a>
                            </div>
                            <div class="mt-3 mb-3">
                                <button class="btn btn-primary" id="submitExcel-btn" onclick="SubmitExcel('/Admin/User/Add/AddAdvisorToUsersWithExce' , '/Admin/User/Index/ExcelStatus');" title="ذخیره"><i class="fa fa-save"></i> ذخیره</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>