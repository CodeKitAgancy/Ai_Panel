@model Ai_Panel.Domain.Role
@{
    bool adminTypesExist = ViewBag.AdminTypes != null;
}

<form asp-action="Add" method="post" asp-route-ParentId="@(ViewBag.ParentId)" id="FormInModal" data-ajax="true" data-ajax-begin="StartLoading()" data-ajax-success="FormSubmit">
	@Html.AntiForgeryToken()
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-lg-12 col-md-12 col-12 mb-2">
            <div class="">
                <label asp-for="RoleTitle">عنوان نقش : </label>
                <input type="text" asp-for="RoleTitle" class="form-control" autocomplete="off" placeholder="عنوان نقش" />
                <span asp-validation-for="RoleTitle" class="text-danger"></span>
            </div>
        </div>
        @if (adminTypesExist)
        {
            <div class="col-lg-12 col-md-12 col-12 mb-2">
                <label asp-for="AdminTypeId" class="">نوع ادمین : </label>
                <select asp-for="AdminTypeId" class="form-select" asp-items="ViewBag.AdminTypes" required>
                    <option disabled selected>لطفا موردی را انتخاب کنید</option>
                </select>
                <span asp-validation-for="AdminTypeId" class="text-danger"></span>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-12 ">
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">ثبت</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
