@{
    ViewData["Title"] = "حذف کاربران با اکسل";
}
<div class="row justify-content-md-center">
    <div class="col-md-8 col-lg-8 col-12">
        <div class="card shadow">
            <h5 class="card-header">افزودن اکسل حذف کاربران</h5>
            <div class="card-body">
                <section class="card-text">
                    <form id="FormInModal" enctype="multipart/form-data" method="post" id="DeleteUserWithExcel">
                        @Html.AntiForgeryToken()
                        <div class="row mb-3">
                            <div class="col-lg-12 col-md-12 col-12 mb-2">
                                <div class="">
                                    <a class="btn btn-outline-success" href="~/excel/example/ImportDeleteUserExcelExample.xlsx" target="_blank">دانلود نمونه فایل فرمت ورودی اکسل</a>
                                </div>
                                <div class="mt-3">
                                    <label class="">فایل اکسل :</label>
                                    <input type="file" name="Excel" id="Excel" class="form-control" accept=".xlsx" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-1 text-end" id="submitExcel">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                                <div class="col-11 mt-2" id="ExcelStatus"></div>
                                <a target="_blank" class="btn btn-outline-danger mt-2 d-none" id="ReportImportExcel">دانلود اکسل گزارش </a>
                            </div>
                            <div class="mt-3 mb-3">
                                <button class="btn btn-primary" onclick="SubmitExcel('/Admin/User/Delete/DeleteUsersWithExcel', '/Admin/User/Delete/DeleteUsersExcelStatus')" id="submitExcel-btn" title="ذخیره"><i class="fa fa-save"></i> ذخیره</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>