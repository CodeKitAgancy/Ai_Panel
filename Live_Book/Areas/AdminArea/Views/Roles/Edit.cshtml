@model Live_Book.Domain.Role
@{

}
<form asp-action="Edit" asp-route-ParentId="@(ViewBag.ParentId)" asp-controller="Roles" method="post" id="FormInModal" data-ajax="true" data-ajax-begin="StartLoading()" data-ajax-success="FormSubmit">
    @Html.AntiForgeryToken()
	<input type="hidden" asp-for="RoleId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-lg-12 col-md-12 col-12 mb-2">
            <label asp-for="RoleTitle">عنوان نقش : </label>
            <input type="text" asp-for="RoleTitle" class="form-control" autocomplete="off" placeholder="عنوان گروه" />
            <span asp-validation-for="RoleTitle" class="text-danger"></span>
        </div>
        <div class="col-lg-12 col-md-12 col-12 mb-2">
            <label asp-for="AdminTypeId" class="">نوع ادمین : </label>
            <select asp-for="AdminTypeId" class="form-select" asp-items="ViewBag.AdminTypes" required>
                <option disabled selected>لطفا موردی را انتخاب کنید</option>
            </select>
            <span asp-validation-for="AdminTypeId" class="text-danger"></span>
        </div>

        <div class="col-lg-12 col-md-12 col-12 ">
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">ثبت</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

